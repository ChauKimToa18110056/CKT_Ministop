<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="CKT.Ministop.Apk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="CKT.Ministop.Apk.activities.LoginActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.RegisterActivity"
            android:theme="@style/NoActionBar">
        </activity>

        <activity
            android:name="CKT.Ministop.Apk.Welcomeactivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="CKT.Ministop.Apk.activities.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="CKT.Ministop.Apk.activities.CategoryProductsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="CKT.Ministop.Apk.activities.MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="CKT.Ministop.Apk.activities.ProductDetailsActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.CategoryProductsActivity" />
        <activity
            android:name="CKT.Ministop.Apk.activities.CartActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="CKT.Ministop.Apk.activities.OrderActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.CartActivity" />
        <activity
            android:name="CKT.Ministop.Apk.activities.WishlistProductsActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.MainActivity" />
        <activity
            android:name="CKT.Ministop.Apk.activities.WishlistProductDetailsActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.WishlistProductsActivity" />
        <activity
            android:name="CKT.Ministop.Apk.activities.SearchableActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.CategoryProductsActivity" />
        <activity
            android:name="CKT.Ministop.Apk.activities.UserOrdersActivity"
            android:launchMode="singleTop"
            android:parentActivityName="CKT.Ministop.Apk.activities.MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="CKT.Ministop.Apk.activities.OrderDetailsActivity"
            android:parentActivityName="CKT.Ministop.Apk.activities.UserOrdersActivity" />

        <receiver android:name="CKT.Ministop.Apk.appwidget.WishlistAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wishlist_app_widget" />
        </receiver>

        <service
            android:name="CKT.Ministop.Apk.appwidget.WishlistGridRemoteService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name="CKT.Ministop.Apk.appwidget.WishlistWidgetService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="CKT.Ministop.Apk.activities.RegisterActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>